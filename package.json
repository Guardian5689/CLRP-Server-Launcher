{
  "name": "fivem-server-launcher",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "build": "electron-builder"
  },

  "build":{
    "appId": "California Life RP Launcher",
    "win":{
      "target": [
        "nsis"
      ],
      "icon":"icon.ico"
    },
    "nsis":{
      "oneClick":true,
      "installerIcon":"icon.ico",
      "uninstallerIcon":"icon.ico",
      "uninstallDisplayName": "CLRP Launcher Uninstaller",
      "license":"LICENSE",
      "allowToChangeInstallationDirectory":true
    },
    "extraResources": [
      {
        "from": "node_modules/regedit/vbs",
        "to": "regedit/vbs",
        "filter": [
          "**/*"
        ]
      }
    ]
  },

  "repository": {
    "type": "git",
    "url": "git+https://github.com/Guardian5689/CLRP-Server-Launcher.git"
  },
  "author": "SOUSA",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Guardian5689/CLRP-Server-Launcher/issues"
  },
  "homepage": "https://github.com/Guardian5689/CLRP-Server-Launcher#readme",
  "dependencies": {
    "axios": "^0.27.2",
    "find-process": "^1.4.7",
    "fs": "^0.0.1-security",
    "node-powershell": "^4.0.0",
    "regedit": "^5.1.1"
  },
  "devDependencies": {
    "electron": "^20.1.1",
    "electron-builder": "^23.6.0"
  }
}
